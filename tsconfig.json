{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "node",
      "@types/next"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/api/*": [
        "pages/api/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "pages/api/*.ts",
    "pages/**/*/*.ts",
    "pages/**/*/*.tsx",
    "components/**/*/*.ts",
    "components/**/*/*.tsx",
    "lib/**/*/*.ts",
    "lib/**/*/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist" // Exclude any compiled output directories
  ]
}
